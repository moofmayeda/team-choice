<!DOCTYPE html>
<html>
<head>
  <title>Choice</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">
  <nav class="navbar navbar-default" role="navigation">
    <div class="container-fluid">
      <div class="navbar-header">
        <%= link_to "TEAM CHOICE", root_path, class: "navbar-brand" %>
      </div>
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li></li>
        </ul>
        <% if user_signed_in? %>
          <%= link_to "Sign Out", destroy_user_session_path, method: "delete", class: "btn-sm btn-primary pull-right" %>
          <%= link_to 'Account', edit_user_registration_path, class: "btn-sm btn-warning pull-right" %>
          <%= link_to "#{current_user.name}'s Profile", user_path(current_user), class: "btn-sm btn-info pull-right" %>
        <% else %>
          <%= link_to "Sign up", new_user_registration_path, class: "btn-sm btn-default pull-right" %>
          <%= link_to "Login", new_user_session_path, class: "btn-sm btn-primary pull-right" %>
        <% end %>
      </div>
    </div>
  </nav>
  <%= flash[:notice] %>
  <%= flash[:alert] %>
  <%= yield %>
</div>
</body>
</html>
