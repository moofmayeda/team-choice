<% if @pin.errors.any? %>
  <ul>
    <% @pin.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @pin, remote: true do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :address %>
  <%= f.text_field :address %>

  <%= f.submit(class: "btn btn-primary") %>
<% end %>
